#!/bin/sh

aptupgrade () {
	st -e sudo apt update
	st -e sudo apt upgrade
}

upgrade () {
	[ "$PM" = "apt" ] && aptupgrade
	[ "$PM" = "pacman" ] && st -e $ARCHPM -Su
}

[ -f /usr/bin/pacman ] && PM=pacman
[ -f /usr/bin/apt ] && PM=apt

[ -f /usr/bin/paru ] && ARCHPM=paru
[ -f /usr/bin/yay ] && ARCHPM=yay
[ -z $ARCHPM ] && ARCHPM=pacman

case $PM in
	pacman) echo "ðŸ“¦$($ARCHPM -Syup | sed 's/.*Synchr.*//' | sed 's/.*downloading.*//g' | sed '/^$/d' | wc -l)" ;;
	apt) printf "ðŸ“¦$(apt list --upgradable 2> /dev/null | wc -l)" ;;
esac

case $BLOCK_BUTTON in
	1) upgrade ;;
esac
