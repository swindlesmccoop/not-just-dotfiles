#!/bin/sh

disp () {
	sxiv -q "$(find "$HOME/images/girls" -type f | shuf -n 1)" &
}

varunset () {
	echo "How many girls shall I populate the screen with?"
	read -r COUNT
	populate "$@"
}

populate () {
	if [ -z ${COUNT+x} ]; then
	for i in $(seq "$1"); do
		disp
	done
	else
	for i in $(seq "$COUNT"); do
		disp
	done
	#i want to add xdotool integration
	fi
}

case "$1" in
	killit) killall sxiv && exit 1 ;;
esac

if [ -z ${1+x} ]; then
	varunset "$@"
else populate "$@"
fi
