#!/bin/sh
#Guides the user through setting their system time

printf "Day (ex. 20): "
read DAY
printf "\n"

printf "Month (ex. Apr): "
read MON
printf "\n"

printf "Year (ex. 2022): "
read YEAR
printf "\n"

printf "Hour (ex. 16): "
read HOUR
printf "\n"

printf "Minutes (ex. 20): "
read MINS
printf "\n"

printf "Seconds (ex. 42): "
read SECS
printf "\n"

printf 'Time is set to: '
date -s "$DAY $MON $YEAR $HOUR:$MINS:$SECS"
