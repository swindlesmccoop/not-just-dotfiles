#!/bin/sh
#Create a simple HTML template for me to easily type a blog post into, without having to worry about formatting or anything.
set -e

read -r -p "Title: " TITLE
read -r -p "File name: " FILENAME

touch "$FILENAME"
printf "<!DOCTYPE html>\n\n<title>$TITLE</title>\n<link rel="stylesheet" href="/css/blog.css">\n\n<h1>$TITLE</h1>\n<br>\n\n<p>\n\n</p>" > "$FILENAME"
vim -c ":norm Gki" "$FILENAME"
