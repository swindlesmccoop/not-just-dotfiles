#!/bin/sh
# Show local IP if connected to the internet. Opens $NETWORKMANAGER on click
NETWORKMANAGER=connman-gtk

IP_ADDRESS="$(ip route | grep -o 'src.*' | tail -n 1 | sed 's/src //' | sed 's/ metric.*//')"
[ "$IP_ADDRESS" != "" ] && printf "ðŸ“¶$IP_ADDRESS\n" || printf "ðŸ“¶Disconnected\n"

case $BLOCK_BUTTON in
	1) $NETWORKMANAGER ;;
esac
