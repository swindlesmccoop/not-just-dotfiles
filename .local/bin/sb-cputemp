#!/bin/sh

_linux() {
	sensors $1 | awk '/^temp1/ {print $2}' | sed 's/+//'
}

_openbsd() {
	[ "$1" = "-f" ] && printf "$(expr $(sysctl | grep hw.sensors.cpu0.temp0 | sed 's/\.00.*//' | sed 's/.*=//') \* 9 / 5 + 32 2> /dev/null)째F" || sysctl | grep hw.sensors.cpu0.temp0 | sed 's/.*=//' | sed 's/\.00//' | sed 's/ deg/째/'
}

_freebsd() {
	C_TEMP=$(sysctl hw.acpi.thermal.tz0.temperature | sed 's/^.* //' )
	[ "$1" = "-f" ] && printf "$(expr $(printf $C_TEMP | sed 's/\..C//') \* 9 / 5 + 32)째F" || printf "$C_TEMP" | sed 's/C/째C/'
}

case $(uname) in
	Linux) _linux "$@" ;;
	OpenBSD) _openbsd "$@" ;;
	FreeBSD) _freebsd "$@" ;;
esac
