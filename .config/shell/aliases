#replace root-only commands with $ROOTCOMMAND [command]
if [ -f /usr/bin/$ROOTCOMMAND ]; then
	for command in mount umount lsblk sv visudo pkg_add pkg_delete updatedb su shutdown poweroff reboot apt pacman ; do
		alias $command="$ROOTCOMMAND $command"
	done; unset command
fi

#up
up() {
	local d=""
	local limit="$1"

	#default to limit of 1
	if [ -z "$limit" ] || [ "$limit" -le 0 ]; then
		limit=1
	fi

	for ((i=1;i<=limit;i++)); do
		d="../$d"
	done

	if ! cd "$d"; then
		echo "Couldn't go up $limit dirs."
	fi
}

#FIX STUFF
