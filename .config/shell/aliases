command -v doas > /dev/null && ROOTCOMMAND=doas || ROOTCOMMAND=sudo

#general aliases
alias sudo="$ROOTCOMMAND"
alias doas="$ROOTCOMMAND"
alias enc="gpg -c --cipher-algo AES256"
alias ":q"="exit"
alias c="clear"
alias flac-mp3="flac2mp3 -b 320 *.flac"
alias vi="vim"
alias nvim="vim"
alias yt="yt-dlp"
alias showme="mpv /dev/video0 2&> /dev/null &"
alias asciime="mplayer tv:// -vo caca"
alias scrk="screenkey --no-whitespace -s small --bak-mode full -t 1 &"
alias svim="$ROOTCOMMAND vim"
alias sivm="$ROOTCOMMAND vim"
alias suvim="$ROOTCOMMAND vim"
alias dmenu_nice="dmenu -i -fn 'monospace:size=8' -nb '#222222' -nf '#bbbbbb' -sb '#005577' -sf '#eeeeee'"

case $(uname) in
	Linux) command -v exa > /dev/null && alias ls="exa -a --group-directories-first" || alias ls="ls -A --group-directories-first --color=auto" ;;
	OpenBSD) command -v exa > /dev/null && alias ls="exa -a --group-directories-first" || alias ls="ls -A" ;;
esac

alias lsh="exa --group-directories-first"
alias updateports="cd /usr/ports && cvs -q up -Pd -A"
alias neofetch="neofetch | sed 's/41742BU/ThinkPad T420s/'"

