full_text=||
align=center
separator=false
separator_block_width=10

[title]
command=while true; do echo "                                                                                                                                                                                                  $(xdotool getactivewindow getwindowname 2>/dev/null)  " || echo ""; sleep 0.1; done
interval=persist
background=#FFFFFF
color=#000000
format=ini

[separator]

[autotiling]
full_text=🟩
command=$HOME/.local/bin/sb-autotiling
interval=persist

[record]
full_text=⏺️
command=$HOME/.local/bin/sb-dmenurecord
interval=0

[doppler]
full_text=🗺️
command=$HOME/.local/bin/sb-doppler
interval=0

[emojis]
full_text=😀
command=$HOME/.local/bin/dmenuunicode
interval=0

[liisten]
full_text=▶️
command=st -e $HOME/.local/bin/sb-liisten

[audio]
full_text=audio
command=$HOME/.local/bin/sb-volume
interval=persist

[separator]

[packages]
command=$HOME/.local/bin/sb-packages
interval=1200

[forecast]
full_text=🌤️Cannot get forecast
command=$HOME/.local/bin/sb-forecast
interval=1200

[ip]
command=$HOME/.local/bin/sb-network
interval=persist

[separator]

[battery]
command=$HOME/.local/bin/sb-battery
interval=1

[time]
command=date "+%a %b %d, %T"
interval=1
