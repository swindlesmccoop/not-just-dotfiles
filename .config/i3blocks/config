[title]
command=while true; do echo "                                                                                                                                                                                                                                                                                                                                                                                   $(xdotool getactivewindow getwindowname 2>/dev/null) " || echo ""; sleep 0.1; done
interval=persist
background=#FFFFFF
color=#000000
format=ini

[separator]

[cpuusage]
command=sb-cpuusage
full_text="CPU: "
interval=1

[volume]
command=sb-volume
full_text="Vol: "
interval=1

[memory]
command=sb-memory
full_text="Mem: "
interval=1

[cputemp]
command=sb-cputemp -f
full_text="Temp: "
interval=1

#[ip]
#command=$HOME/.local/bin/sb-network
#interval=1

#[battery]
#full_text="Bat: "
#command=$HOME/.local/bin/sb-battery
#interval=1

[time]
command=date "+%a %b %d, %T"
interval=1
