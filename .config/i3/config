client.focused          #00caff #285577 #ffffff #2e9ef4   #285577
client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
client.unfocused        #333333 #222222 #888888 #292d2e   #222222
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

client.background       #ffffff

#master and slave stacks like DWM
exec_always --no-startup-id $HOME/.config/i3/i3-master-stack/master-stack
bindsym $mod+m exec --no-startup-id $HOME/.config/i3/i3-master-stack/swapper

#i3blocks
bar {
	position top
	status_command i3blocks
}
